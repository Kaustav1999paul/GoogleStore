<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AccountFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@drawable/confirm_order_design"
                android:elevation="20dp"
                android:outlineSpotShadowColor="#FF0000"
                android:outlineAmbientShadowColor="#FF0000"
                android:fadingEdgeLength="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="35dp"
                    android:elevation="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/accountProfile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_account"
                        />
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Holder name"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:fontFamily="@font/comfortaa"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:paddingTop="3dp"/>
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="holderemail@gmail.com"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:paddingTop="3dp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account\nInformation"
                            android:textSize="30dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:textColor="#4C4C4C"
                            android:fontFamily="@font/andika"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                           android:id="@+id/logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            app:backgroundTint="#FDFDFD"
                            android:outlineSpotShadowColor="#FF0000"
                            android:outlineAmbientShadowColor="#FF0000"
                            android:elevation="20dp"
                            android:src="@drawable/ic_power"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#F44336"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:paddingLeft="25dp"
                        android:layout_marginTop="35dp"
                        />

                    <TextView
                        android:id="@+id/setting_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:paddingLeft="25dp"
                        android:text="Holder Name"
                        android:textColor="#888888"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone no"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#F44336"
                        android:paddingLeft="25dp"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:id="@+id/setting_phone_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:paddingLeft="25dp"
                        android:text="1234567890"
                        android:textColor="#888888"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#F44336"
                        android:paddingLeft="25dp"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:id="@+id/setting_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:paddingLeft="25dp"
                        android:text="Holder Address"
                        android:textColor="#888888"
                        android:textSize="20dp" />


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
</RelativeLayout>